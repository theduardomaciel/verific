{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"env": [
				"VERCEL_URL",
				"AUTH_SECRET",
				"DATABASE_URL",
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET"
			],
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"]
		},
		"lint": {},
		"db:generate": {},
		"db:drop": {},
		"db:migrate": {},
		"db:studio": {},
		"db:seed": {}
	}
}
