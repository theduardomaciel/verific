{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "env": [
        "DATABASE_URL",
        "AUTH_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "db:generate": {},
    "db:drop": {},
    "db:migrate": {},
    "db:studio": {},
    "db:seed": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
